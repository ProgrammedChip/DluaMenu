-- Find all the groups with a name starting with "0-" and ending with "-100"
local groups = game:GetService("DataStoreService"):GetDataStore("groups"):GetSortedAsync(false, 0, 100)

-- Iterate through the groups
for _, group in pairs(groups) do
  -- Check if the group's name is a number from 0 to 100
  if tonumber(group.Name) and tonumber(group.Name) >= 0 and tonumber(group.Name) <= 100 then
    -- Find the "Lightbase" in the group
    local lightbase = group:FindFirstChild("Lightbase")
    if lightbase then
      -- Find the "SurfaceLight" inside the "Lightbase"
      local surfaceLight = lightbase:FindFirstChild("SurfaceLight")
      if surfaceLight then
        -- Set the brightness of the "SurfaceLight" to 1.5
        surfaceLight.Brightness = 1.5
      end
    end
  end
end
